doctype html
html
  head
    title= title
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src="https://unpkg.com/feather-icons")
    block scripts
  body
    header
        block header
            button.prec(
                title="Go back to previous page"
                onclick="javascript:history.back()"
            ) 
                i(data-feather="arrow-left-circle")
            button.burger-menu
                i(data-feather="menu")
    nav
        block sidebar
            a(href="/").title
                i(data-feather="coffee")
                h1 Mininotes

            .menu
                h3 
                    a(href="/notebooks") All Notebooks 
                h3.create-note
                    a(href="/notebooks/new-note") New note
                h3.create-notebook
                    a(href="/notebooks/create") New notebook
                div.recent-notebooks
                    h3 Recent Notebooks
                    ul
                        each val in ["Feature", "to", "implement"]
                            li
                                i(data-feather="box")
                                | #{val}
                .recent-notes
                    h3 Recent Notes
                    ul
                        each val in ["Feature", "to", "implement"]
                            li
                                i(data-feather="box")
                                | #{val}
    main
        block content
            div.main-content
                p I'm sample main content, and this is a change
    script.
        const burger = document.querySelector("button.burger-menu");
        const nav = document.querySelector("nav");

        if (burger) {

            burger.addEventListener("click", (e) => {
                e.stopPropagation();
                nav.classList.toggle("active");
            });

            document.body.addEventListener("click", (e) => {
                if (nav.classList.contains("active") && !(nav.contains(e.target))) {
                    nav.classList.remove("active");
                }
            })
        }

        feather.replace();

