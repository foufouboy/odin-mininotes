doctype html
html
  head
    title= title
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width", initial-scale=1)
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src="https://unpkg.com/feather-icons")
    script(src="https://cdn.jsdelivr.net/npm/@editorjs/editorjs@latest")
    script(src="https://cdn.jsdelivr.net/npm/@editorjs/header@latest")
    script(src="https://cdn.jsdelivr.net/npm/@editorjs/list@latest")
    script(src="/javascripts/note-editor.js" defer)
    block scripts
  body
    header
        block header
            h2=title
    nav
        block sidebar
            a(href="/").title
                i(data-feather="coffee")
                h1 Mininotes

            .menu
                h3.create-note
                    a(href="/notebooks/new-note") New note
                h3.create-notebook
                    a(href="/notebooks/create") New notebook
                div.recent-notebooks
                    h3 Recent Notebooks
                    ul
                        each val in ["this", "that", "those", "thus"]
                            li
                                i(data-feather="box")
                                | #{val} 
                .recent-notes
                    h3 Recent Notes
                    ul
                        each val in ["this", "that", "those", "thus"]
                            li
                                i(data-feather="file-text")
                                | #{val} 
    main
        block content
            div.main-content
                p I'm sample main content, and this is a change
    script.
        feather.replace();
